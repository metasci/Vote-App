<!--logged in page-->
<!DOCTYPE html>
<html>
    <head>
        <title>VoteTote</title>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
        <link href='https://fonts.googleapis.com/css?family=Corben:400,700' rel='stylesheet' type='text/css'>
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.4.0/css/font-awesome.min.css"/>
        <link href='styles/header.css' rel='stylesheet' type='text/css'/>
        <link href="styles/polls.css" rel="stylesheet" type="text/css"/>
    </head>
    <body>
        
        <% include templates/header.ejs %>
        
        <div class="main jumbotron">
            <h1>Dashboard</h1>
            <h3>What would you like to do today?</h3>
            <a rel="new-poll" class="menu btn btn-success">New Poll</a><a rel="my-polls" class="menu btn btn-primary">My Polls</a>
        </div>
        
        
        <div class="panels">
            
            <!--center these panels-->
            <div class="panel col-lg-4 col-md-4 col-sm-12 col-xs-12 new-poll <%= newPollShow %>">
                <div class="container">
                    <h2>New Poll</h2>
                    <form id="new-poll" action="/newPoll" method="post">
                        <input style="display:none" value="<%= user._id %>" name="currentUser">
                        <p>Name your poll.</p>
                        <input type="text" name="pollName" placeholder="What's your favorite lunch?">
                        <p>Options</p>
                        <div id="options">
                            <input type="text" placeholder="Macaroni" name="option">
                            <input type="text" placeholder="Hot Pockets" name="option">
                        </div>
                        <!--<div class="box">-->
                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12 centered-btn">
                            <!---->
                            <div class="btn btn-default">More Options</div><br><br>
                            <input class="btn btn-success" type="submit">
                            <!---->
                        </div>
                        <!--</div>-->
                    </form>
                </div>
            </div>
            
            <div class="panel col-lg-4 col-md-4 col-sm-12 col-xs-12  my-polls">
                <!--you will want to show poll url inside the individual polls-->
                <div class="list-group container">
                <!--doesn't update automatically on new poll submit-->
                    <% user.polls.forEach(function(poll){ %>
                        <a style="cursor: default" class="list-group-item"><%= poll.question %><span title="delete" class="btn btn-danger"><i class="glyphicon glyphicon-trash"></i></span></a>
                    <% }); %>
                </div>
            </div>
            
            
            <div class="panel congrats <%= congratShow %>">Congrats panel</div>
            
        </div>
        
        
        <script src="https://code.jquery.com/jquery-2.2.4.min.js"></script>
        <script src="scripts/polls.js"></script>
    </body>
</html>